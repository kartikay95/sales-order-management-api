{
  "info": {
    "name": "Sales Order API",
    "_postman_id": "d9f0f6ce-64d8-4d94-9828-e0f1b77a69ab",
    "description": "Postman Collection for the Sales Order API (Auth, Catalog, Orders).\n\nBase URL: {{base_url}}\n\nBefore using protected endpoints:\n1. Run **Login (Admin)** request.\n2. Copy the `token` field from response.\n3. Click the Environment dropdown → Edit → set variable `token`.\nThen all endpoints will automatically include Authorization header.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080/api/v1" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth","register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john\",\n  \"password\": \"john123\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Login (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"adminpass\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Login (User)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john\",\n  \"password\": \"john123\"\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Catalog",
      "item": [
        {
          "name": "Get All Catalog Items",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/catalog", "host": ["{{base_url}}"], "path": ["catalog"] }
          },
          "response": []
        },
        {
          "name": "Get Catalog Item by ID",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/catalog/1", "host": ["{{base_url}}"], "path": ["catalog","1"] }
          },
          "response": []
        },
        {
          "name": "Add Catalog Item (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/catalog", "host": ["{{base_url}}"], "path": ["catalog"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Smart Watch\",\n  \"price\": 199.99\n}"
            }
          },
          "response": []
        },
        {
          "name": "Update Catalog Price (ADMIN)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/catalog/1/price?newPrice=249.99", "host": ["{{base_url}}"], "path": ["catalog","1","price"], "query": [{ "key": "newPrice", "value": "249.99" }] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerName\": \"John Doe\",\n  \"items\": [\n    { \"catalogItemId\": 1, \"quantity\": 2 },\n    { \"catalogItemId\": 2, \"quantity\": 1 }\n  ]\n}"
            }
          },
          "response": []
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/orders", "host": ["{{base_url}}"], "path": ["orders"] }
          },
          "response": []
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/orders/1", "host": ["{{base_url}}"], "path": ["orders","1"] }
          },
          "response": []
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/orders/1/cancel", "host": ["{{base_url}}"], "path": ["orders","1","cancel"] }
          },
          "response": []
        },
        {
          "name": "Delete Order (ADMIN)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{base_url}}/orders/1", "host": ["{{base_url}}"], "path": ["orders","1"] }
          },
          "response": []
        }
      ]
    }
  ]
}
